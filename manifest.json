{
  "manifest_version": 2,

  "name": "BitMinter checker",
  "description": "This extension checks for the status of your workers from BitMinter.",
  "version": "0.1.0",

  "permissions": [
    "https://bitminter.com/",
    "storage",
    "background"
  ],
  "options_page": "src/options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html",
     "default_title": "BitMinter checker"
  },

  "background": {
    "scripts": ["src/js/jquery.js", "src/js/background.js"]
  }
}